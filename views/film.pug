html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/style.css")
        title Pelicula 
    body
        main
        each film in films
            h1 #{film.Title}
            section
                article
                    h1 Sección Peliculas 
                    p Genero: #{film.Genre}
                    p Descripción: #{film.Plot}
                    p Precio: #{film.Awards}
                    img(src=film.Poster, alt=product.title class="img_logo")