html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/style.css")
        title Película
    body
        main
            each film in films
                section
                    article
                        h1 #{film.Title}
                        p Género: #{film.Genre}
                        p Descripción: #{film.Plot}
                        p Premios: #{film.Awards}
                        img(src=film.Poster, alt=film.Title class="img_logo")